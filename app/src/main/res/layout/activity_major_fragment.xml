<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.swufe.scoresforapp.FourMain.MajorFragment">


    <com.qlh.dropdownmenu.DropDownMenu
        android:id="@+id/dropDownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ddIsUsePopMenuHeightPercent="true"
        app:dddividerColor="@color/divider"
        app:ddmaskColor="@color/mask_color"
        app:ddmenuBackgroundColor="@color/white"
        app:ddmenuSelectedIcon="@drawable/ic_down"
        app:ddmenuTextSize="@dimen/x40"
        app:ddmenuUnselectedIcon="@drawable/ic_up"
        app:ddpopMenuHeightPercent="0.6"
        app:ddtextSelectedColor="@color/colorAccent"
        app:ddtextUnselectedColor="@color/drop_down_unselected"
        app:ddunderlineColor="@color/divider" />


    <TextView
        android:id="@+id/tv_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="专业分数"
        android:textSize="18sp" />

</LinearLayout>
