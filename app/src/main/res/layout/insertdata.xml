<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="输入题目："
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="17sp"/>

        <EditText
            android:hint="题目"
            android:id="@+id/et_question"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="输入选项a："
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="17sp"/>

        <EditText
            android:hint="题目"
            android:id="@+id/et_optionA"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="输入选项B："
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="17sp"/>

        <EditText
            android:hint="题目"
            android:id="@+id/et_optionB"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="选a："
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="17sp"/>

        <EditText
            android:hint="题目"
            android:id="@+id/et_selecteda"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="text"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="选b"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="17sp"/>

        <EditText
            android:hint="题目"
            android:id="@+id/et_selectedb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="text"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="插入"/>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete"/>

    <Button
        android:id="@+id/btn_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询"/>




</LinearLayout>